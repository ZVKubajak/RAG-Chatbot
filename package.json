{
  "name": "rag-chatbot",
  "version": "1.0.0",
  "description": "A RAG application chatbot.",
  "main": "index.js",
  "scripts": {
    "start": "npm run client:build && npm run server",
    "start:dev": "concurrently \"npm run server:dev\" \"wait-on tcp:3001 && npm run client:dev\"",
    "client:build": "cd client && npm run build",
    "server": "cd server && npm start && cd ..",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "install": "cd server && npm i && cd ../client && npm i",
    "build": "npm install && cd server && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZVKubajak/rag-chatbot.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/ZVKubajak/rag-chatbot/issues"
  },
  "homepage": "https://github.com/ZVKubajak/rag-chatbot#readme",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "wait-on": "^8.0.3"
  }
}
